<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:SqlPhanos.ViewModels"
             xmlns:AvaloniaEdit="clr-namespace:AvaloniaEdit;assembly=AvaloniaEdit"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="SqlPhanos.Views.SqlDocumentView"
             x:DataType="vm:SqlDocumentViewModel">

    <Design.DataContext>
        <vm:SqlDocumentViewModel/>
    </Design.DataContext>

    <DockPanel>
        <!-- Header bar -->
        <Border DockPanel.Dock="Top" 
                Background="{DynamicResource SystemAccentColor}"
                Padding="12,8">
            <Grid ColumnDefinitions="Auto,*,Auto">
                <TextBlock Grid.Column="0"
                           Text="{Binding Title}" 
                           FontWeight="SemiBold"
                           FontSize="14"
                           VerticalAlignment="Center"/>
                
                <TextBlock Grid.Column="2"
                           Text="{Binding FilePath}"
                           FontSize="11"
                           Opacity="0.7"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- AvaloniaEdit TextEditor -->
        <AvaloniaEdit:TextEditor Name="SqlEditor"
                                 FontFamily="Cascadia Code,Cascadia Mono,Consolas,Courier New"
                                 FontSize="14"
                                 ShowLineNumbers="True"
                                 IsReadOnly="True"
                                 WordWrap="False"
                                 HorizontalScrollBarVisibility="Auto"
                                 VerticalScrollBarVisibility="Auto"/>
    </DockPanel>

</UserControl>
