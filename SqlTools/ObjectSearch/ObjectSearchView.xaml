<UserControl x:Class="SqlTools.ObjectSearch.ObjectSearchView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Canvas Grid.RowSpan="2" Background="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}" />

        <ContentControl x:Name="Connections" />

        <ContentControl x:Name="SearchResults"
                        Grid.Row="1" />
    </Grid>
</UserControl>